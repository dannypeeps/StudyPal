<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StudyPal"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/studyTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeTitle"
        android:layout_centerHorizontal="true"
        android:text="Study Timer"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/studyPlannerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studyTimerButton"
        android:layout_centerHorizontal="true"
        android:text="Study Planner"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/progressTrackerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studyPlannerButton"
        android:layout_centerHorizontal="true"
        android:text="Progress Tracker"
        android:layout_marginTop="20dp" />
</RelativeLayout>